@model UrumiumMVC.ViewModel.EntityViewModel.PharmacyMassage.PharmacyMassageInfoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagmentLayoutIllness.cshtml";
}
<section class="content-header">
    <h1>
        داشبرد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">داشبرد</li>
    </ol>
</section>

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="col-md-12">
        <h1 class="text-center">پیام های داروخانه ها</h1>
        <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-striped" style="background-color:white;">
                <thead>
                <th class="text-center">نام داروخانه</th>
                <th class="text-center">متن</th>
                <th class="text-center">نسخه</th>
                </thead>
                <tbody id="listofnoskhe">
                    @{
                        foreach (var item in Model.PhamacyMassageList)
                        {
                            <tr>
                                <td class="text-center" style="padding:10px;"> @item.Pharmacies.Name </td>
                                <td class="text-center" style="padding:10px;">@item.Description</td>
                                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title=" نسخه"><a class="btn btn-warning btn-xs" onclick="Shownoskhe(@item.VisitId,@item.IllnessId,@item.DoctorId)"><i class="ion ion-ios-filing"></i></a></p></td>
                            </tr>
                        }
                    }
                    

                </tbody>

            </table>

        </div>

    </div>
</div>

<script>
    function Shownoskhe(visitid, illnessid, doctorid) {
        window.location.href = "/Noskhe/ClientNoskhe?visitid=" + visitid + "&&illnessid=" + illnessid + "&&doctorid=" + doctorid;
    }
</script>