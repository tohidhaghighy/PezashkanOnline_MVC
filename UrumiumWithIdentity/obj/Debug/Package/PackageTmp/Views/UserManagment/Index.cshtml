
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagmentLayout.cshtml";
}

<link href="~/Content/Common/CommonAddItem.css" rel="stylesheet" />

<section class="content-header">
    <h1>
        داشبرد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت مقاله</li>
    </ol>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-title text-center wow zoomIn">
                <h1>مدیریت پایانه جدید</h1>
                <span></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                درج پایانه جدید
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <p>
                                <br />
                                <a class="btn btn-success btn-block">درج</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingFour">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                جستجو پایانه ها
                            </a>
                        </h4>
                    </div>
                    <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                        <div class="panel-body">
                            <p>
                                <input type="text" class="form-control text-success" placeholder="کلمه مورد نظر را برای جستجو وارد کنید" />
                                <br />
                                <a class="btn btn-success btn-block">جستجو</a>
                            </p>

                        </div>
                    </div>
                </div>

            </div>
        </div><!--- END COL -->
    </div><!--- END ROW -->
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center">لیست پایانه ها</h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped" style="background-color:white;">
                    <thead>
                    <th class="text-center">نام پایانه</th>
                    <th class="text-center">شهر</th>
                    <th class="text-center">ویرایش</th>
                    <th class="text-center">حذف</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">ارومیه</td>
                            <td class="text-center">ارومیه</td>
                            <td class="text-center"><p data-placement="top" data-toggle="tooltip" title="ویرایش"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><i class="ion ion-ios-printer"></i></button></p></td>
                            <td class="text-center"><p data-placement="top" data-toggle="tooltip" title="حذف"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><i class="ion ion-ios-trash"></i></button></p></td>
                        </tr>
                    </tbody>

                </table>
                <div class="clearfix"></div>
                <ul class="pagination pull-right">
                    <li class="disabled"><a href="#"><i class="ion ion-ios-arrow-right"></i></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="ion ion-ios-arrow-left"></i></a></li>
                </ul>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="ion ion-ios-close"></i></button>
                <h4 class="modal-title custom_align" id="Heading">ویرایش </h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="ارومیه">
                </div>
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="ارومیه">
                </div>
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="ارومیه">
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"> ویرایش</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="ion ion-ios-close"></i></button>
                <h4 class="modal-title custom_align" id="Heading">حذف مورد</h4>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> ایا میخواهید حذف کنید؟</div>

            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-success"><i class="ion ion-ios-checkmark"></i> بله</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ion ion-ios-close"></i> خیر</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



<script src="~/Content/Common/Commonadditem.js"></script>
