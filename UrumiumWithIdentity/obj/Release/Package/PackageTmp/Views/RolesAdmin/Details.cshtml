@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ManagmentLayout.cshtml";
}

<h2 class="text-center" style="padding:30px;">جزیات نقش ها</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            نام نقش
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4 class="text-center">لیست کاربران</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p style="margin-right:50px;">هیچ کاربری با این نقش وجود ندارد</p>
}

<table class="table" style="margin-right:50px;">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p style="margin-right:50px;">
    @Html.ActionLink("ویرایش", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("بازگشت", "Index")
</p>



