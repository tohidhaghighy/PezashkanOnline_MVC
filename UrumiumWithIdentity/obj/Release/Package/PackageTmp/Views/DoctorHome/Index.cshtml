    <script>

        function showmodalpeigiri() {
            $("#myModalshekaiat").modal();
        }


        function showmodalsabtenam() {
            $("#myModalsabtenam").modal();
        }

        function showmodal() {
            $("#myModal").modal();
        }


        function doctorcitylist() {
            var text = $("#txtsearch").val();
            var e = document.getElementById("cmbcity");
            var cityid = e.options[e.selectedIndex].value;
            window.location.href = '/DoctorHome/ListDoctorWithCity?groupid=0&cityid=' + cityid + '&text=' + text;
        }


        function Addtakhalof() {
            var txtpeigiri = $("#txtpeigiri").val();
            var txtdespei = $("#txtdespei").val();
            $.ajax({
                type: "Post",
                url: '/ViolationManagment/AddTakhalof',
                data: { peigiri: txtpeigiri, despei: txtdespei },
                success: function (data) {
                    if (data.success == true) {
                        swal("موفق شد", "گزارش تخلف با موفقیت ارسال شد", "success");
                    }
                    else {
                        swal("مشکل سرور", "مشکلی در حذف ایجاد شد", "error");
                    }

                }
            });
        }
    </script>

