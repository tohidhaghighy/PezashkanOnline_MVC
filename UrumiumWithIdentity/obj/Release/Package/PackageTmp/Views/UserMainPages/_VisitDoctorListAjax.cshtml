@model List<UrumiumMVC.ViewModel.EntityViewModel.VisitViewModel.VisitListViewModel>

@{
    if (Model !=null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="text-center" style="padding:10px;">@item.Code </td>
                <td class="text-center" style="padding:10px;">@item.IllnessName</td>
                @{
                    if (item.Is_Visit_Finish == true)
                    {
                        <td class="text-center" style="padding:10px;">ویزیت شده</td>
                    }
                    else
                    {
                        <td class="text-center" style="padding:10px;">ویزیت نشده</td>
                    }
                }

                <td class="text-center" style="padding:10px;">@item.ReserveTime </td>
                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="پرونده بیمار"><a class="btn btn-danger btn-xs" onclick="ShowParvande(@item.IllnessId,@item.DoctorId)"><i class="ion ion-ios-albums"></i></a></p></td>
                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="درج نسخه"><a class="btn btn-success btn-xs" onclick="ShowNoskhe(@item.Id,@item.IllnessId,@item.DoctorId)"><i class="ion ion-ios-book"></i></a></p></td>

                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="شروع چت"><a class="btn btn-warning btn-xs" onclick="StartChat(@item.Id,@item.IllnessId,@item.DoctorId,'@item.IllnessName')"><i class="ion ion-ios-world"></i></a></p></td>
                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="شروع چت"><a class="btn btn-default btn-xs" onclick="ShowQuestion(@item.Id,@item.IllnessId,@item.DoctorId)"><i class="ion ion-ios-film"></i></a></p></td>
            </tr>
                        }
                    }


}
