@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_ManagmentLayout.cshtml";
}

<h2 class="text-center" style="padding:20px;">تغییر پسورد</h2>

<div class="row" style="padding-left:100px;padding-right:100px;">
    @using (Html.BeginForm("AddnewPasswordAsync", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <input type="text" id="id" name="id" style="display:none;" value="@User.Identity.GetUserId()"/>
                <div class="form-group">
                    <p> پسورد قدیمی :</p>
                        
                    <input type="password" class="form-control" value="" placeholder="پسورد قدیمی را وارد کنید" id="oldpass" name="oldpass" />
                    
                </div>

                <div class="form-group">
                    <p> پسورد جدید :</p>

                    <input type="password" class="form-control" value="" placeholder="پسورد جدید را وارد کنید" id="newpass" name="newpass" />

                </div>
                <div class="form-group">
                    <p> تکرار پسورد جدید :</p>

                    <input type="password" class="form-control" value="" placeholder="تکرار پسورد جدید را وارد کنید" id="renewpass" name="renewpass" />
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btn btn-success btn-block" value="ثبت تغییرات" />
                </div>
            </div>



        </div>

                        }
</div>


