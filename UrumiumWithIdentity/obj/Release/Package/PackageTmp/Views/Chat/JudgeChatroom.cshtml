<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet"

</head>
<body>
    <div class="container">
        @{
            if (Model.Sendername == "D")
            {
                <p style="margin-right:50px;text-align:center;margin-top:20px;" class="text-center">
                    <a class="btn btn-success btn-block" onclick="finishvisit(@Model.Groupname)">اتمام وقت ویزیت </a>
                </p>
            }
        }
        <h3 class=" text-center" style="padding:20px;">چت روم</h3>
        <input type="text" style="display:none;" value="@Model.Groupname" id="grouptxt" />
        <input type="number" style="display:none;" value="@Model.illnessid" id="illnessidtxt" />
        <input type="text" style="display:none;" value="@Model.Sendername" id="sendernametxt" />
        <input type="text" style="display:none;" value="@Model.UserId" id="useridtext" />

        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading">
                            <h4>چت روم</h4>
                        </div>
                        <div class="srch_bar">

                        </div>
                    </div>
                    <div class="inbox_chat">
                        <div class="chat_list active_chat">
                            <div class="chat_people">
                                <div class="chat_img"> <img src="~/Content/icons/doctor.png" alt="sunil"> </div>
                                <div class="chat_ib">
                                    <h5>کارشناس <span class="chat_date"></span></h5>
                                    <p>
                                        از انتخاب شما متشکریم
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="chat_list">
                            <div class="chat_people">
                                <div class="chat_img"> <img src="~/Content/icons/fever.png" alt="sunil"> </div>
                                <div class="chat_ib">
                                    <h5>@Model.Illnessname <span class="chat_date"></span></h5>
                                    <p>
                                        بیمار
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mesgs">
                    <div class="msg_history" id="chatid">

                        @{Html.RenderPartial("_JudgeChatlist", Model.Allmassages);}

                    </div>
                    <div class="type_msg">
                        <div class="input_msg_write">
                            <input id="chat" type="text" class="write_msg" placeholder="متن خود را وارد کنید" />
                            <button id="sendmessage" class="msg_send_btn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true" title="ارسال"></i></button>
                            <button id="sendimage" class="msg_send_btn1" type="button"><i class="fa fa-file" aria-hidden="true" title="عکس"></i></button>
                            <input type="file" id="imgupload" style="display:none" name="imgupload" />
                            <div id="showitem" name="showitem">

                            </div>

                        </div>
                    </div>
                </div>
            </div>


            <p class="text-center top_spac"> Design by <a target="_blank" href="#" title="توحید حقیقی">T.H</a></p>

        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/mattdiamond/Recorderjs/08e7abd9/dist/recorder.js"></script>
    <script src="~/Content/recorder/js/app.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="/signalr/hubs"></script>
    <script>

        setInterval(function () {
            UpdateJudge($('#grouptxt').val());
        }, 20000);

        $('#sendimage').click(function () {
            $('#imgupload').trigger('click');
        });

        $("#imgupload").on('change', function () {

            if (typeof (FileReader) != "undefined") {

                var image_holder = $("#showitem");
                image_holder.empty();

                var reader = new FileReader();
                reader.onload = function (e) {
                    $("<img />", {
                        "src": e.target.result,
                        "class": "thumb-image",
                        "style": "width:70px;height:70px;paddign:10px;"
                    }).appendTo(image_holder);
                }
                image_holder.show();
                reader.readAsDataURL($(this)[0].files[0]);
            } else {
                alert("This browser does not support FileReader.");
            }
            sendFile();
        });

        var chat = $.connection.chatHub;
        $(function () {
            var chat = $.connection.chatHub;
            $.connection.hub.start().done(function () {
                var name = $('#sendernametxt').val();
                var group = $('#grouptxt').val();
                var userid = $('#useridtext').val();

                chat.server.adduser(name, group);

                $("#sendmessage").click(function () {
                    var txt = $("#chat").val();

                    if (txt != "") {
                        chat.server.sendgroupjudge(txt, group,userid, name);
                        addchattokhodam($("#chat").val());
                        $("#chat").val("").focus();
                    }


                });

            });

            chat.client.addNewItem = function (name, message) {
                addchattouser(name,message);
            }

            chat.client.groupmassage = function (message) {
                addchattouser('@User.Identity.GetUserName()', message);
            }

            chat.client.groupimagemassageothers = function (image) {
                addimgtouser('@User.Identity.GetUserName()',image);
            }

            chat.client.groupimagemassageown = function (image) {
                addimgtokhodam(image);
            }



        });


        function sendFile() {

            var formData = new FormData();
            formData.append('fileupdate', $('#imgupload')[0].files[0]);
            $.ajax({
                type: 'post',
                url: '/Upload/JudgeUpload',
                data: formData,
                success: function (status) {
                    if (status.success) {
                        chat.server.sendgroupimgjudge(status.data, $('#grouptxt').val(), $('#useridtext').val(), $("#sendernametxt").val());
                        $('#showitem').empty();
                    }
                    else {
                        swal("مشکل سرور", "مشکلی در اتصال به سرور ایجاد شد", "error");
                    }
                },
                processData: false,
                contentType: false,
                error: function () {
                    swal("مشکل سرور", "مشکلی در اتصال به سرور ایجاد شد", "error");
                }
            });
        }

        function finishvisit(visitid) {
            swal({
                title: "آیا میخواهید مکالمه تمام شود؟",
                text: "",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "بله تمام شود",
                cancelButtonText: "خیر",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        showmodalitem(visitid);

                    } else {
                        swal("صرف نظر", "حذف نشد", "error");
                    }
                });
        }

        function showmodalitem(visitid) {
            $.ajax({
                type: "Post",
                url: '/JudgeManagment/Finishvisit',
                data: { visitid: visitid },
                success: function (data) {
                    if (data.success) {
                        swal("تمام شد", "با موفقیت تمام شد", "success");
                    }
                }
            });
        }


        function addvoicetokhodam(voicesrc) {
            var list = "<div class='outgoing_msg'><div class='sent_msg'><p><audio controls='' src='" + voicesrc + "'></audio></p><span class='time_date'>خودم</span></div></div>";
            $("#chatid").append(list);
            scrollbuttom();
        }

        function addvoicetouser(user, voicesrc) {
            var list = "<div class='incoming_msg'><div class='incoming_msg_img'> <img src='/Content/icons/fever.png' alt='sunil'></div><div class='received_msg'><div class='received_withd_msg'><p><audio controls='' src='" + voicesrc + "'></audio></p><span class='time_date'> کاربر</span></div></div></div>";
            $("#chatid").append(list);
            scrollbuttom();
        }


        function addimgtokhodam(imgsrc) {
            var list = "<div class='outgoing_msg'><div class='sent_msg'><p><a href=" + imgsrc + "><img src=" + imgsrc + " style='height:70px;width:70px;'/></a></p><span class='time_date'>خودم</span></div></div>";
            $("#chatid").append(list);
            scrollbuttom();
        }

        function addimgtouser(user, imgsrc) {
            var list = "<div class='incoming_msg'><div class='incoming_msg_img'> <img src='/Content/icons/fever.png' alt='sunil'></div><div class='received_msg'><div class='received_withd_msg'><p><a href=" + imgsrc + "><img src=" + imgsrc + " style='height:70px;width:70px;' href=" + imgsrc + "/></a></p><span class='time_date'> کاربر</span></div></div></div>";
            
            $("#chatid").append(list);
            scrollbuttom();
        }

        function addchattokhodam(massege) {
            var list = "<div class='outgoing_msg'><div class='sent_msg'><p>" + massege + "</p><span class='time_date'>خودم</span></div></div>";

            $("#chatid").append(list);
            scrollbuttom();
        }

        function addchattouser(user, massege) {
            var list = "<div class='incoming_msg'><div class='incoming_msg_img'> <img src='/Content/icons/fever.png' alt='sunil'></div><div class='received_msg'><div class='received_withd_msg'><p>" + massege + "</p><span class='time_date'> کاربر</span></div></div></div>";
            $("#chatid").append(list);
            scrollbuttom();
        }

       


        function UpdateJudge(visitid) {
            $.ajax({
                type: "Post",
                url: '/Chat/UpdateJudgeChat',
                data: { visitid: visitid },
                success: function (data) {
                    if (data.success == true) {
                        $('#chatid').empty();
                        $('#chatid').append(data.View);
                        scrollbuttom();
                    }
                    else {
                        swal("مشکل سرور", "مشکلی در حذف ایجاد شد", "error");
                    }

                }
            });
            
        }

        function scrollbuttom() {
            var objDiv = document.getElementById("mesgs");
            objDiv.scrollTop = objDiv.scrollHeight;
        }
    </script>

</body>
</html>