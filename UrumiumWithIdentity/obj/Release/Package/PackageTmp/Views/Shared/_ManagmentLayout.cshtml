    <script>
        function loadpage() {
                $.ajax({
                    type: "Post",
                    url: '/AdminManagment/GetAdmin',
                    data: { userid: '@User.Identity.GetUserId()' },
                    success: function (data) {
                        if (data.AccountManagment == false) {
                            document.getElementById("accountmanagment").style.display = "none";
                            document.getElementById("accountpersendmanagment").style.display = "none";
                        }
                        if (data.DoctorManagment == false) {
                            document.getElementById("doctormanagment").style.display = "none";
                        }
                        if (data.IllnessManagment == false) {
                            document.getElementById("illnessmanagment").style.display = "none";
                        }
                        if (data.JudgeManagment == false) {
                            document.getElementById("judgemanagment").style.display = "none";
                        }
                        if (data.AdminManagment == false) {
                            document.getElementById("adminmanagment").style.display = "none";
                            document.getElementById("groupmanagment").style.display = "none";
                            document.getElementById("accountpersendmanagment").style.display = "none";
                            document.getElementById("takhalofmanagment").style.display = "none";
                            document.getElementById("mainpagemanagment").style.display = "none";
                        }
                        if (data.CommonManagment == false) {
                            document.getElementById("commonmanagment").style.display = "none";
                        }
                        if (data.PharmacyManagment == false) {
                            document.getElementById("dragmanagment").style.display = "none";
                        }
                    }
                });
        }
    </script>
