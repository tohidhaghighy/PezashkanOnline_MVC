<style>
    .heading-box h2 {
        width: 100%;
        color: red;
    }

    .text-box {
        position: absolute;
        top: 35%;
        left: 15%;
        right: 15%;
        color: #fff;
        text-align: center;
        transform: translateY(-50%);
    }

    .bg {
        width: 100%;
        max-height: 100%;
        height: 100%;
    }

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .carousel, .item {
        height: 100%;
    }

    .carousel-inner {
        height: 100%;
    }

    .carousel {
        margin-bottom: 60px;
    }

    .carousel-caption {
        z-index: 10;
    }

    .carousel .item {
        background-color: #777;
    }

    .parallax {
        /* The image used */
        background-image: url("../../Content/Music/3.jpg");
        /* Set a specific height */
        min-height: 500px;
        /* Create the parallax scrolling effect */
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .txtfull {
        border-bottom-left-radius: 45px;
        border-top-right-radius: 45px;
        display: block;
        background: linear-gradient(to left, rgba(52, 129, 235, 0.60) 50%, white 50%);
        background-size: 200% 100%;
        background-position: left bottom;
        transition: all .5s ease-out;
    }

        .txtfull:hover {
            background-position: right bottom;
        }

    .txtfullleft {
        border-bottom-left-radius: 45px;
        border-top-right-radius: 45px;
        display: block;
        background: linear-gradient(to right, rgba(52, 129, 235, 0.60) 50%, white 50%);
        background-size: 200% 100%;
        background-position: right bottom;
        transition: all .5s ease-out;
    }

        .txtfullleft:hover {
            background-position: left bottom;
        }

    .text {
        text-align: center;
        color: black;
        transition: all .6s ease-out;
        padding: 20px;
    }

        .text:hover {
            color: white;
        }

    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 300px;
        perspective: 1000px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    .flip-card-front {
        background-color: #bbb;
        color: black;
    }

    .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
    }


    .fullfromcenter {
        border-bottom-left-radius: 45px;
        border-top-right-radius: 45px;
        display: block;
        color: #2980b9;
        font-size: 30px;
        font-family: arial;
        background-image: linear-gradient(#2980b9, #2980b9);
        background-position: 50% 50%;
        background-repeat: no-repeat;
        background-size: 0% 100%;
        transition: background-size .5s, color .5s;
    }

        .fullfromcenter:hover {
            background-size: 100% 100%;
            color: #fff;
        }

    .my-card {
        position: absolute;
        left: 40%;
        top: -20px;
        border-radius: 50%;
    }

    .image_outer_container {
        margin-top: auto;
        margin-bottom: auto;
        border-radius: 50%;
        position: relative;
    }

    .image_inner_container {
        border-radius: 50%;
        padding: 5px;
        background: #833ab4;
        background: -webkit-linear-gradient(to bottom, #fcb045, #fd1d1d, #833ab4);
        background: linear-gradient(to bottom, #fcb045, #fd1d1d, #833ab4);
    }

        .image_inner_container img {
            height: 200px;
            width: 200px;
            border-radius: 50%;
            border: 5px solid white;
        }

    .image_outer_container .green_icon {
        background-color: #4cd137;
        position: absolute;
        right: 30px;
        bottom: 10px;
        height: 30px;
        width: 30px;
        border: 5px solid white;
        border-radius: 50%;
    }
    .blog .carousel-indicators {
        left: 0;
        top: auto;
        bottom: -40px;
    }

