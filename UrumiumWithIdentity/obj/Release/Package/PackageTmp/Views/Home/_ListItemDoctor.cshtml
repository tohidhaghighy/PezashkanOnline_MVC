@model UrumiumMVC.DomainClasses.Entities.Doctor.Doctor

<div class="col-md-3 col-sm-6" style="padding:5px;">
    <div class="box21">
        @{
            if (Model.Image == "" || Model.Image == null)
            {
                <img src="~/Content/Managment/dist/img/avatar.png" style="height:250px;" alt="">
            }
            else
            {
                <img src="~/uploads/Doctor/@Model.Image" style="height:250px;" alt="">
            }
        }
       
        <div class="box-content">
            <h4 class="title">@Model.Name   @Model.Family</h4>
            <p class="description">@Model.Groups.Name</p>
            <a class="read-more" href="/Home/DetailDoctor?id=@Model.Id">مشاهده جزیات</a>
        </div>
    </div>
</div>

