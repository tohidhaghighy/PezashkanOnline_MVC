@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManagmentLayout.cshtml";
}

<h2 class="text-center" style="padding:50px;">ویرایش نقش ها</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <div class="col-md-2">
                <p class="text-center">نقش</p>
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="بروزرسانی" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="margin-right:50px;">
    @Html.ActionLink("بازگشت", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
