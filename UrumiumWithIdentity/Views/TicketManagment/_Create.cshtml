@model UrumiumMVC.DomainClasses.Entities.Ticket.Ticket
<link href="~/Content/Managment/dist/css/ManagmentIndexStyle.css" rel="stylesheet" />
<script src="~/Scripts/ckeditor4.12/adapters/jquery.js"></script>
<script src="~/Scripts/ckeditor4.12/ckeditor.js"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.14.2/styles/default.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.14.2/highlight.min.js"></script>
<div class="contact-form">
    @using (Html.BeginForm("Answer", "TicketManagment", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    <textarea class="form-control ckeditor" id="text" name="text"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="id" name="id" style="display:none;" value="@Model.Id"/>
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact btn-success" value="پاسخ به سوال" />
                </div>
            </div>

        </div>
     }
</div>

