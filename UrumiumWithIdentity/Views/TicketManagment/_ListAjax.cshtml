@model List<UrumiumMVC.DomainClasses.Entities.Ticket.Ticket>
@{
    foreach (var item in Model)
    {
        <tr>
            <td class="text-center" style="padding:50px;">
                @{
                    if (item.Seen == true)
                    {
                        <input type="checkbox" name="ckitem" checked="checked" />
                    }
                    else
                    {
                        <input type="checkbox" name="ckitem" class="cbaddtoslider" />
                    }
                }

            </td>
            <td class="text-center" style="padding:50px;">@item.Name</td>
            <td class="text-center" style="padding:50px;">@item.Email</td>
            <td class="text-center" style="padding:50px;">
                @{
                    if (item.File != null)
                    {
                        <p data-placement="top" data-toggle="tooltip" title="فایل دریافتی">
                            <a class="btn btn-primary btn-xs" href="~/uploads/UploadFile/@item.File">
                                <i class="ion ion-ios-albums"></i>
                            </a>
                        </p>
                    }
                }
           
            </td>
            <td class="text-center" style="padding:50px;"><p data-placement="top" data-toggle="tooltip" title="پاسخ به تیکت"><a class="btn btn-primary btn-xs" href="/TicketManagment/TicketChatroom?ticketid=@item.Id"><i class="ion ion-ios-book"></i></a></p></td>
            <td class="text-center" style="padding:50px;"><p data-placement="top" data-toggle="tooltip" title="حذف"><a class="btn btn-danger btn-xs" onclick="deleteitem(@item.Id)"><i class="ion ion-ios-trash"></i></a></p></td>
        </tr>
                    }

}