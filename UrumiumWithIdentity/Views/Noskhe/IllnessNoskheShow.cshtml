<script>
    function showtodragstore(visitid,illnessid,doctorid) {
        swal({
            title: "آیا میخواهید به داروخانه ها نمایش داده شود؟",
            text: "",
            type: "success",
            showCancelButton: true,
            confirmButtonClass: "btn-success",
            confirmButtonText: "بله نمایش داده شود",
            cancelButtonText: "خیر",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    sendtoservertoshow(visitid, illnessid, doctorid);

                } else {
                    swal("صرف نظر", "حذف نشد", "error");
                }
            });
    }

    function sendtoservertoshow(visitid, illnessid, doctorid) {
        $.ajax({
            type: "Post",
            url: '/Noskhe/ShowNoskheToPharmacy',
            data: { visitid: visitid, illnessid: illnessid, doctorid: doctorid },
            success: function (data) {
                if (data.success) {
                    swal("با موفقیت ارسال شد", "نسخه به داروخانه ارسال شد", "success");
                }
                else {
                    swal("صرف نظر", "مشکل ارتباط با سرور", "error");
                }

            }
        });
    }
</script>